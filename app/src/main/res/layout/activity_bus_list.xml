<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F8FA">

    <!-- 헤더: 중앙 정렬, 살짝 높게 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:background="#4B93FF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            app:tint="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="버스 운행 관리"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 상단 60% : 등록된 버스 목록 (그대로) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/section_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/section_selected"
        app:layout_constraintVertical_weight="6">

        <TextView
            android:id="@+id/registeredBusTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:text="등록된 버스 목록"
            android:textColor="#222222"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btnNewBus"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="12dp"
            android:text="새 버스 등록"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:backgroundTint="#4B93FF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRegistrations"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/registeredBusTitle"
            app:layout_constraintBottom_toTopOf="@id/btnNewBus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvRegEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등록된 버스가 없습니다. 아래의 '새 버스 등록'으로 추가하세요."
            android:textColor="#9AA1A9"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/registeredBusTitle"
            app:layout_constraintBottom_toTopOf="@id/btnNewBus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 하단 40% : 선택된 버스 정보 (필드 순서 변경) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/section_selected"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/section_list"
        app:layout_constraintVertical_weight="4">

        <TextView
            android:id="@+id/busInfoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="선택된 버스 정보"
            android:textColor="#222222"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/selectedCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/busInfoTitle"
            app:layout_constraintBottom_toTopOf="@id/bthDriveStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvSelectedRoute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="노선명: -"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tvSelectedPlate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="차량번호: -"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tvSelectedBusNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="노선 ID: -"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tvSelectedStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="차량 상태: -"
                    android:textColor="#12805A"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/bthDriveStart"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            android:text="운행 시작"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:backgroundTint="#4B93FF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
