<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F8FA">

    <!-- 헤더 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="104dp"
        android:background="#4B93FF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            android:contentDescription="@string/back"
            app:tint="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="버스 운행 관리"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:letterSpacing="0.02"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 하단 고정: 운행 시작 버튼 -->
    <Button
        android:id="@+id/bthDriveStart"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="18dp"
        android:text="운행 시작"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:backgroundTint="#4B93FF"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 선택된 버스 정보 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/section_selected"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bthDriveStart"
        app:layout_constraintTop_toBottomOf="@id/section_list">

        <TextView
            android:id="@+id/busInfoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="14dp"
            android:text="선택된 버스 정보"
            android:textColor="#222222"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="14dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/busInfoTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- ▼▼▼ 선택 카드 내부를 리스트 카드와 동일 컨셉으로 개편 ▼▼▼ -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="92dp"
                android:paddingStart="16dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp">

                <!-- 우측 X 버튼(수직 중앙) -->
                <ImageButton
                    android:id="@+id/btnSelectedRemove"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_close_24"
                    android:tint="#6B7280"
                    android:contentDescription="@string/delete"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" />

                <!-- 좌 20%/우 80% 가이드 (리스트보다 살짝 넓게 텍스트 영역 확보) -->
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideMidSel"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- [1열] 아이콘 -->
                <ImageView
                    android:id="@+id/ivSelectedIcon"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/ic_bus_in"
                    android:background="@drawable/bg_bus_circle"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerInside"
                    android:padding="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideMidSel" />

                <!-- [2열] 1행 라벨 -->
                <TextView
                    android:id="@+id/labelSelectedRoute"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="노선명"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="@id/guideMidSel"
                    app:layout_constraintEnd_toStartOf="@+id/labelSelectedRouteType"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/labelSelectedRouteType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="노선유형"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    app:layout_constraintTop_toTopOf="@id/labelSelectedRoute"
                    app:layout_constraintEnd_toStartOf="@id/btnSelectedRemove"
                    android:layout_marginEnd="8dp"/>

                <!-- [2열] 1행 값: 노선명 + (가깝게) 노선유형 -->
                <TextView
                    android:id="@+id/tvSelectedRoute"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#111111"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintTop_toBottomOf="@id/labelSelectedRoute"
                    app:layout_constraintStart_toStartOf="@id/guideMidSel"
                    app:layout_constraintEnd_toStartOf="@+id/tvSelectedRouteType"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tvSelectedRouteType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="13.5sp"
                    android:textColor="#6B7280"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintBaseline_toBaselineOf="@id/tvSelectedRoute"
                    app:layout_constraintStart_toEndOf="@id/tvSelectedRoute"
                    app:layout_constraintEnd_toStartOf="@id/btnSelectedRemove"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="8dp"/>

                <!-- [2열] 2행: 차량번호(라벨+값) -->
                <TextView
                    android:id="@+id/labelSelectedPlate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="차량번호"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    app:layout_constraintTop_toBottomOf="@id/tvSelectedRoute"
                    app:layout_constraintStart_toStartOf="@id/guideMidSel"
                    app:layout_constraintEnd_toStartOf="@id/btnSelectedRemove"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvSelectedPlate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="15sp"
                    android:textColor="#374151"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintTop_toBottomOf="@id/labelSelectedPlate"
                    app:layout_constraintStart_toStartOf="@id/guideMidSel"
                    app:layout_constraintEnd_toStartOf="@id/btnSelectedRemove"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="8dp"/>

                <!-- 하단 상태 -->
                <TextView
                    android:id="@+id/tvSelectedStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="차량 상태: -"
                    android:textColor="#12805A"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintTop_toBottomOf="@id/tvSelectedPlate"
                    app:layout_constraintStart_toStartOf="@id/guideMidSel"
                    app:layout_constraintEnd_toStartOf="@id/btnSelectedRemove"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="8dp"/>

                <!-- 보조(숨김) -->
                <TextView
                    android:id="@+id/tvSelectedBusNumber"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!-- ▲▲▲ 선택 카드 내부 끝 ▲▲▲ -->

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 등록된 버스 목록 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/section_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/section_selected">

        <TextView
            android:id="@+id/registeredBusTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:text="등록된 버스 목록"
            android:textColor="#222222"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRegistrations"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingHorizontal="16dp"
            android:paddingTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnNewBus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/registeredBusTitle" />

        <TextView
            android:id="@+id/tvRegEmpty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="등록된 버스가 없습니다. 아래의 ‘새 버스 등록’으로 추가하세요."
            android:textColor="#9AA1A9"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/rvRegistrations"
            app:layout_constraintBottom_toBottomOf="@id/rvRegistrations"
            app:layout_constraintStart_toStartOf="@id/rvRegistrations"
            app:layout_constraintEnd_toEndOf="@id/rvRegistrations"/>

        <Button
            android:id="@+id/btnNewBus"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:backgroundTint="#4B93FF"
            android:stateListAnimator="@null"
            android:text="새 버스 등록"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
