<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F8FA">

    <!-- 헤더 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="104dp"
        android:background="#4B93FF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            android:contentDescription="@string/back"
            app:tint="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="버스 운행 관리"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:letterSpacing="0.02"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 하단 고정: 운행 시작 버튼 -->
    <Button
        android:id="@+id/bthDriveStart"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="18dp"
        android:text="운행 시작"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:backgroundTint="#4B93FF"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 선택된 버스 정보 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/section_selected"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bthDriveStart"
        app:layout_constraintTop_toBottomOf="@id/section_list">

        <TextView
            android:id="@+id/busInfoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="14dp"
            android:text="선택된 버스 정보"
            android:textColor="#222222"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/selectedCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="14dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/busInfoTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- ▶ 두 열 구성 (좌 60% / 우 40%) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="92dp"
                android:padding="16dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideMidSel"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- 좌측: 노선명 / 차량번호 -->
                <TextView
                    android:id="@+id/labelSelectedRoute"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="노선명"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideMidSel"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/tvSelectedRoute"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#111111"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintTop_toBottomOf="@id/labelSelectedRoute"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideMidSel"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/labelSelectedPlate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="차량번호"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    app:layout_constraintTop_toBottomOf="@id/tvSelectedRoute"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideMidSel"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/tvSelectedPlate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="15sp"
                    android:textColor="#374151"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintTop_toBottomOf="@id/labelSelectedPlate"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideMidSel"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="12dp"/>

                <!-- 우측: 노선 ID / 차량 ID -->
                <TextView
                    android:id="@+id/labelSelectedRouteId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="노선 ID"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    app:layout_constraintTop_toTopOf="@id/labelSelectedRoute"
                    app:layout_constraintStart_toStartOf="@id/guideMidSel"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="12dp"/>

                <TextView
                    android:id="@+id/tvSelectedBusNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="13.5sp"
                    android:textColor="#6B7280"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintTop_toBottomOf="@id/labelSelectedRouteId"
                    app:layout_constraintStart_toStartOf="@id/guideMidSel"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="12dp"/>

                <TextView
                    android:id="@+id/labelSelectedVehicleId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="차량 ID"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    app:layout_constraintTop_toBottomOf="@id/tvSelectedBusNumber"
                    app:layout_constraintStart_toStartOf="@id/guideMidSel"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="12dp"/>

                <TextView
                    android:id="@+id/tvSelectedVehicleId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="13.5sp"
                    android:textColor="#6B7280"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintTop_toBottomOf="@id/labelSelectedVehicleId"
                    app:layout_constraintStart_toStartOf="@id/guideMidSel"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="12dp"/>

                <!-- 상태 한 줄 (하단 전체 폭) -->
                <TextView
                    android:id="@+id/tvSelectedStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="차량 상태: -"
                    android:textColor="#12805A"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintTop_toBottomOf="@id/tvSelectedPlate"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="12dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 등록된 버스 목록 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/section_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/section_selected">

        <TextView
            android:id="@+id/registeredBusTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:text="등록된 버스 목록"
            android:textColor="#222222"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRegistrations"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingHorizontal="16dp"
            android:paddingTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/registeredBusTitle"
            app:layout_constraintBottom_toTopOf="@+id/btnNewBus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvRegEmpty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="등록된 버스가 없습니다. 아래의 ‘새 버스 등록’으로 추가하세요."
            android:textColor="#9AA1A9"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/rvRegistrations"
            app:layout_constraintBottom_toBottomOf="@id/rvRegistrations"
            app:layout_constraintStart_toStartOf="@id/rvRegistrations"
            app:layout_constraintEnd_toEndOf="@id/rvRegistrations"/>

        <Button
            android:id="@+id/btnNewBus"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:text="새 버스 등록"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:backgroundTint="#4B93FF"
            android:stateListAnimator="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
