<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:padding="24dp">

    <!-- 상단 25% 가이드라인 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <!-- 뒤로가기 -->
    <ImageButton
        android:id="@+id/loginButtonBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="뒤로가기 버튼"
        android:src="@drawable/ic_back"
        android:tint="#4A4A4A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 타이틀 -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Hop On"
        android:textColor="#4A92FD"
        android:textSize="70sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guidelineTop15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginButtonBack" />

    <!-- 상단 아이콘 -->
    <ImageView
        android:id="@+id/imageBusIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="버스 아이콘"
        android:src="@drawable/hopon_new_icon"
        app:layout_constraintTop_toTopOf="@id/guidelineTop15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 아이디 -->
    <EditText
        android:id="@+id/editTextId"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edittext_outline"
        android:hint="아이디"
        android:inputType="text"
        android:padding="12dp"
        android:textColorHint="#999"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/imageBusIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.85" />

    <!-- 비밀번호 -->
    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_outline"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColorHint="#999"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/editTextId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.85" />

    <!-- 자동 로그인 -->
    <CheckBox
        android:id="@+id/checkbox_auto_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="자동 로그인"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword"
        app:layout_constraintStart_toStartOf="@+id/editTextPassword" />

    <!-- 로그인 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonLogin"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#4A92FD"
        android:elevation="2dp"
        android:text="로그인"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:cornerRadius="26dp"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_auto_login"
        app:layout_constraintStart_toStartOf="@+id/editTextPassword"
        app:layout_constraintEnd_toEndOf="@+id/editTextPassword"
        app:layout_constraintWidth_percent="0.85" />

    <!-- ID/PW 찾기 (작은 칩 느낌) -->
    <android.widget.Button
        android:id="@+id/button_find_idpw"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/find_id_pw_bg_gray"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        android:text="ID/PW 찾기"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogin"
        app:layout_constraintStart_toStartOf="@+id/buttonLogin" />

    <!-- 회원가입 -->
    <TextView
        android:id="@+id/text_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="회원가입"
        android:textColor="#4A92FD"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogin"
        app:layout_constraintEnd_toEndOf="@+id/buttonLogin" />

</androidx.constraintlayout.widget.ConstraintLayout>
