<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F8"
    tools:context=".activity.MainActivity">

    <!-- 상단 로고 -->
    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOP ON"
        android:textColor="#4B93FF"
        android:textSize="38sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 상단 오른쪽: 공지/설정 (간격 포함) -->
    <LinearLayout
        android:id="@+id/topRightContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 공지 + 배지 -->
        <FrameLayout
            android:id="@+id/btnNoticeWrap"
            android:layout_width="40dp"
            android:layout_height="40dp">

            <ImageButton
                android:id="@+id/btnNotice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_bell"
                app:tint="#4B93FF"
                android:contentDescription="@string/app_name"/>

            <TextView
                android:id="@+id/tvNoticeBadge"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="end|top"
                android:background="@drawable/bg_badge_red"
                android:gravity="center"
                android:text="•"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:visibility="gone"/>
        </FrameLayout>

        <!-- 간격 -->
        <Space
            android:layout_width="10dp"
            android:layout_height="1dp"/>

        <!-- 설정 -->
        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_settings_gear"
            app:tint="#4B93FF"
            android:contentDescription="@string/app_name"/>
    </LinearLayout>

    <!-- 환영 문구 -->
    <TextView
        android:id="@+id/tvHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="환영합니다."
        android:textColor="#666666"
        android:textSize="15sp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvAppName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 기사 정보 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardDriverInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/tvHello"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- 원형 프로필 -->
                <ImageView
                    android:id="@+id/imgDriverProfile"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/circle_mask"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_bus" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDriverName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="김민재 기사님"
                        android:textColor="#111111"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/tvCompany"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(주)남성버스"
                        android:textColor="#555555"
                        android:textSize="13sp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvLastLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="마지막 접속 2025.07.17 15:39"
                        android:textColor="#9AA1A9"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnEditProfile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/edit"
                    android:background="@android:color/transparent"
                    app:tint="#4B93FF" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 운행 시작 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardDriveStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="22dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="#4B93FF"
        app:layout_constraintTop_toBottomOf="@id/cardDriverInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/busicon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/bus_motion"/>

            <Button
                android:id="@+id/drive_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@android:color/white"
                android:text="운행 시작"
                android:textColor="#4B93FF"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 운행 기록 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="22dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/cardDriveStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 타이틀 + 더보기 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLogTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="최근 운행 기록"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#111111" />

                <ImageButton
                    android:id="@+id/ivLogMore"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/expand"
                    app:tint="#4B93FF" />
            </LinearLayout>

            <!-- ▼ 컬럼 헤더 (1열 날짜 / 2열 노선·차량 / 3열 유형 / 4열 출발 / 5열 도착) -->
            <LinearLayout
                android:id="@+id/logHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal"
                android:weightSum="12">

                <!-- 1열: 날짜 (연/월 2줄 셀과 대응, 중앙 정렬) -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="날짜"
                    android:gravity="center"
                    android:textColor="#9AA1A9"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <!-- 2열: 노선 / 차량 -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="노선 / 차량"
                    android:gravity="center"
                    android:textColor="#9AA1A9"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <!-- 3열: 유형 -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="유형"
                    android:gravity="center"
                    android:textColor="#9AA1A9"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <!-- 4열: 출발 -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="출발"
                    android:gravity="center"
                    android:textColor="#9AA1A9"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <!-- 5열: 도착 -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="도착"
                    android:gravity="center"
                    android:textColor="#9AA1A9"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- 제목/헤더와 리스트 사이 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0" />

            <!-- ▼ 여기만 동적으로 채움 -->
            <LinearLayout
                android:id="@+id/logList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@drawable/divider_transparent_8dp"
                android:showDividers="middle"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:clipToPadding="false"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>
