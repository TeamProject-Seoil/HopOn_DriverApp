<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F8FA">

    <!-- 상단 헤더 -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="#4B93FF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_back"
            android:background="@android:color/transparent"
            app:tint="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="버스 운행 관리"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- 등록된 버스 목록 제목 -->
    <TextView
        android:id="@+id/registeredBusTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록된 버스 목록"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:textColor="#222222"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 등록된 버스 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/buslist"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/registeredBusTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 내용 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvEmptyBusList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="등록된 버스가 없습니다."
                android:textColor="#9AA1A9"
                android:textSize="14sp"
                android:layout_gravity="center"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- 새 등록 버튼 -->
    <Button
        android:id="@+id/btnNewBus"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:text="새 버스 등록"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:backgroundTint="#4B93FF"
        app:layout_constraintTop_toBottomOf="@id/buslist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 버스정보 타이틀 -->
    <TextView
        android:id="@+id/busInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="선택된 버스 정보"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#222222"
        app:layout_constraintTop_toBottomOf="@id/btnNewBus"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 버스 정보 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/busInfoCardEmpty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/busInfoTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/busInfoContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="버스 번호: 320"
                android:textSize="16sp"
                android:textColor="#111111"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="노선: 북정환승센터 ↔ 면목역"
                android:textSize="14sp"
                android:textColor="#555555"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차량 상태: 정상 운행"
                android:textSize="14sp"
                android:textColor="#12805A"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 운행 시작 버튼 -->
    <Button
        android:id="@+id/bthDriveStart"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:layout_marginTop="24dp"
        android:text="운행 시작"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:backgroundTint="#4B93FF"
        app:layout_constraintTop_toBottomOf="@id/busInfoCardEmpty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
