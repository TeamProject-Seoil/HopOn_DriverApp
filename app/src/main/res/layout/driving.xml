<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F4F7"
    android:paddingStart="18dp"
    android:paddingEnd="18dp"
    android:paddingTop="22dp"
    android:paddingBottom="18dp">

    <!-- 상단 정보 카드 (노선명/번호판 + 노선유형 칩) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTopInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 포인트 바 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#4B93FF" />

            <!-- 아이콘 + 제목/칩 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- 버스 아이콘 -->
                <ImageView
                    android:id="@+id/imgBusIcon"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="14dp"
                    android:background="@drawable/bg_bus_circle"
                    android:contentDescription="@string/untitled"
                    android:padding="12dp"
                    android:src="@drawable/ic_bus_in" />

                <!-- 제목/칩 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvRouteName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="노선명"
                            android:textColor="#111827"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvRouteType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_route_chip"
                            android:paddingStart="10dp"
                            android:paddingTop="6dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="6dp"
                            android:text="-"
                            android:textColor="#2563EB"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="차량번호"
                        android:textColor="#6B7280"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvPlateNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="서울74사4320"
                        android:textColor="#111827"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 총 운행시간 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardDriveTimer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintTop_toBottomOf="@id/cardTopInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="false"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_timer"
                android:tint="#4B93FF"
                android:contentDescription="@string/untitled"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="총 운행시간"
                android:textColor="#6B7280"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvTotalDriveTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="00:00:00"
                android:textStyle="bold"
                android:textColor="#111827"
                android:textSize="20sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 정류장 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardStops"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintTop_toBottomOf="@id/cardDriveTimer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="false"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이번 정류장"
                android:textColor="#6B7280"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvCurrentStop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="-"
                android:textStyle="bold"
                android:textColor="#111827"
                android:textSize="20sp"
                android:gravity="center"
                android:textAlignment="center"
                android:maxLines="2"
                android:ellipsize="end"/>

            <View
                android:layout_width="72dp"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="#E5E7EB"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다음 정류장"
                android:textColor="#6B7280"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvNextStop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="-"
                android:textStyle="bold"
                android:textColor="#111827"
                android:textSize="20sp"
                android:gravity="center"
                android:textAlignment="center"
                android:maxLines="2"
                android:ellipsize="end"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 승객 현황 카드 -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/cardStops"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="false"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:id="@+id/passengerHeaderTint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 헤더 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F3F6FA"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:clipToOutline="true">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_people"
                    android:contentDescription="@string/untitled"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="승객 현황"
                    android:textColor="#111827"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tvTotalReserved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="총 예약 0명"
                    android:textColor="#6B7280"
                    android:textSize="12sp"
                    android:paddingStart="8dp"
                    android:paddingEnd="0dp"/>

                <TextView
                    android:id="@+id/tvTotalOnboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" · 탑승 0명"
                    android:textColor="#6B7280"
                    android:textSize="12sp"
                    android:paddingStart="4dp"
                    android:paddingEnd="8dp"/>
            </LinearLayout>

            <!-- 이번역 승하차 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/rounded_box_blue_light"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:clipToOutline="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이번역 승차"
                        android:textColor="#4B93FF"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvBoardingNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="0명"
                        android:textColor="#111827"
                        android:textSize="26sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/rounded_box_red_light"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:clipToOutline="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이번역 하차"
                        android:textColor="#E53935"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvDropoffNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="0명"
                        android:textColor="#111827"
                        android:textSize="26sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <!-- 다음역 승하차 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/rounded_box_blue_light"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:clipToOutline="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="다음역 승차"
                        android:textColor="#2563EB"
                        android:textSize="13sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvBoardingNextNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="0명"
                        android:textColor="#111827"
                        android:textSize="22sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/rounded_box_red_light"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:clipToOutline="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="다음역 하차"
                        android:textColor="#DC2626"
                        android:textSize="13sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvDropoffNextNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="0명"
                        android:textColor="#111827"
                        android:textSize="22sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 하단 버튼 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="14dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDelay"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="지연"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="19sp"
            app:backgroundTint="#BFC3CC"
            app:cornerRadius="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDriveEnd"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="운행 종료"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="19sp"
            app:backgroundTint="#4B93FF"
            app:cornerRadius="20dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
