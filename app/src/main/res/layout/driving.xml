<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F4F7"
    android:paddingStart="18dp"
    android:paddingEnd="18dp"
    android:paddingTop="22dp"
    android:paddingBottom="18dp">

    <!-- 상단 정보 카드: 2열 (좌: 노선명/차량번호, 우: 노선ID/차량ID) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTopInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="18dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="10dp"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 포인트 바 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#4B93FF"/>

            <!-- 아이콘 + 2열 상세 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <!-- 버스 아이콘 -->
                <ImageView
                    android:id="@+id/imgBusIcon"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/ic_bus"
                    android:contentDescription="@string/untitled"/>

                <!-- 좌/우 2열 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <!-- 좌열: 노선명 / 차량번호(번호판) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="노선명"
                            android:textColor="#6B7280"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tvRouteName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="복정환승센터 방면"
                            android:textColor="#111827"
                            android:textStyle="bold"
                            android:textSize="20sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="차량번호"
                            android:textColor="#6B7280"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tvPlateNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="서울74사4320"
                            android:textColor="#111827"
                            android:textStyle="bold"
                            android:textSize="18sp"/>
                    </LinearLayout>

                    <!-- 우열: 노선ID / 차량ID (조금 더 작게) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="노선 ID"
                            android:textColor="#6B7280"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tvRouteId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100100611"
                            android:textColor="#111827"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="차량 ID"
                            android:textColor="#6B7280"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tvVehicleId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="106024518"
                            android:textColor="#111827"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 정류장 카드: 위/아래 배치 + 중앙정렬 (헤더 문구 제거) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardStops"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardTopInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="18dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="10dp"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp"
            android:gravity="center_horizontal">

            <!-- 이번 정류장 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이번 정류장"
                android:textColor="#6B7280"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvCurrentStop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="-"
                android:textStyle="bold"
                android:textColor="#111827"
                android:textSize="18sp"
                android:gravity="center"
                android:textAlignment="center"
                android:maxLines="2"
                android:ellipsize="end"/>

            <View
                android:layout_width="56dp"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="#E5E7EB"/>

            <!-- 다음 정류장 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다음 정류장"
                android:textColor="#6B7280"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvNextStop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="-"
                android:textStyle="bold"
                android:textColor="#111827"
                android:textSize="18sp"
                android:gravity="center"
                android:textAlignment="center"
                android:maxLines="2"
                android:ellipsize="end"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 승객 현황 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardPassengerInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        app:layout_constraintTop_toBottomOf="@id/cardStops"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="18dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="10dp"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:id="@+id/passengerHeaderTint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F3F6FA"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:clipToOutline="true">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_people"
                    android:contentDescription="@string/untitled"/>

                <TextView
                    android:id="@+id/tvPassengerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="승객 현황"
                    android:textColor="#111827"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="118dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rounded_box_blue_light"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:clipToOutline="true">

                    <TextView
                        android:id="@+id/tvBoardingCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="탑승 예정"
                        android:textColor="#4B93FF"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvBoardingNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="3명"
                        android:textColor="#111827"
                        android:textSize="24sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="118dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/rounded_box_red_light"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:clipToOutline="true">

                    <TextView
                        android:id="@+id/tvDropoffCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="하차 예정"
                        android:textColor="#E53935"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvDropoffNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="2명"
                        android:textColor="#111827"
                        android:textSize="24sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 하단 버튼(바닥에서 살짝 띄움) -->
    <LinearLayout
        android:id="@+id/controlButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="22dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDelay"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="지연"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#BFC3CC"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDriveEnd"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="운행 종료"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#4B93FF"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
