<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 상단: 아이콘 + (노선/차량) + 유형 칩(우측 1/3 = 총 소요 위) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 2/3 지점 가이드라인 (왼쪽=노선/차량, 오른쪽=노선유형 칩) -->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_two_thirds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.666"/>

            <ImageView
                android:id="@+id/ivRouteIcon"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_bus_circle2"
                android:src="@drawable/ic_bus_in"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <!-- 노선/차량 묶음: 가이드라인(2/3)까지 확장 -->
            <LinearLayout
                android:id="@+id/llRoutePlate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/ivRouteIcon"
                app:layout_constraintEnd_toStartOf="@id/guideline_two_thirds"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <!-- 노선 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="노선"
                        android:textColor="#6B7280"
                        android:textSize="11sp"/>

                    <TextView
                        android:id="@+id/tvRouteName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5617"
                        android:textColor="#111111"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end"/>
                </LinearLayout>

                <Space
                    android:layout_width="16dp"
                    android:layout_height="1dp"/>

                <!-- 차량 (같은 행) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="차량"
                        android:textColor="#6B7280"
                        android:textSize="11sp"/>

                    <TextView
                        android:id="@+id/tvPlateNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="서울71사1526"
                        android:textColor="#111111"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end"/>
                </LinearLayout>
            </LinearLayout>

            <!-- 노선 유형 칩: 우측 1/3 영역 시작점(가이드라인)에 맞춰 배치 -->
            <TextView
                android:id="@+id/tvRouteType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_route_chip"
                android:layout_marginEnd="36dp"
                android:paddingStart="10dp"
                android:paddingTop="6dp"
                android:paddingEnd="10dp"
                android:paddingBottom="6dp"
                android:text="-"
                android:textColor="#2563EB"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline_two_thirds"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="#E5E7EB"/>

        <!-- 시간/기간 (3등분) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시작"
                    android:textColor="#6B7280"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tvStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05:41"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#111111"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="종료"
                    android:textColor="#6B7280"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tvEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08:21"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#111111"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총 소요"
                    android:textColor="#6B7280"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02:40"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#111111"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
