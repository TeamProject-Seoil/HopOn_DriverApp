<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popup_background"
    android:padding="0dp">

    <!-- 제목 -->

    <!-- 내용 영역 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#4DA3FF"
        android:gravity="center"
        android:text="새 등록"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 버스 노선번호 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="버스 노선번호   "
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_route_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="버스 노선번호"
                android:background="@drawable/edittext_background"
                android:padding="8dp"
                android:inputType="text" />
        </LinearLayout>

        <!-- 버스 차량번호 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="버스 차량번호   "
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_bus_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="버스 차량번호"
                android:background="@drawable/edittext_background"
                android:padding="8dp"
                android:inputType="text" />
        </LinearLayout>

        <!-- 버스 노선 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:text="버스 노선  "
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_route"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="버스 노선"
                android:background="@drawable/edittext_background"
                android:padding="8dp"
                android:inputType="text" />
        </LinearLayout>

        <!-- 버스 저상 여부 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="버스 저상 여부  "
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/check_low_floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <!-- 버튼 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="8dp">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="취소"
            android:textColor="#FFFFFF"
            android:backgroundTint="#BDBDBD" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="등록"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4DA3FF" />
    </LinearLayout>
</LinearLayout>
